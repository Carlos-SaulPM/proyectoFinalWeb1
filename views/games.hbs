<body class="bg-dark text-light">
  <div class="container mt-5">
    <!-- nav para búsqueda de juegos -->
    <div class="mb-4">
      <form action="/games" method="GET" class="row g-3 align-items-center">
        <!-- Selector de género -->
        <div class="col-auto">
          <select
            name="genero"
            class="form-select"
            aria-label="Seleccionar género"
          >
            <option value="">Filtrar por género</option>
            {{#each generos}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Barra de búsqueda -->
        <div class="col">
          <div class="input-group flex-grow-1">
            <input
              type="text"
              name="busqueda"
              class="form-control"
              placeholder="Buscar título..."
              aria-label="Buscar título"
            />
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-search"></i>
            </button>
          </div>
        </div>

        <!-- Botón para reiniciar filtros -->
        <div class="col-auto">
          <button
            type="reset"
            class="btn btn-link text-primary"
            onclick="window.location='/games';"
          >
            Reiniciar filtros
          </button>
        </div>
      </form>

    </div>

    <!-- Cards de cada juego -->
    <div class="row">
      {{#each juegos}}
        <div class="col-md-4 mb-4">
          <div class="card bg-dark text-light">
            <img
              src="{{this.imagen}}"
              class="card-img-top"
              alt="{{this.titulo}}"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.titulo}}</h5>
              <p class="card-text">{{this.descripcion}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</body>