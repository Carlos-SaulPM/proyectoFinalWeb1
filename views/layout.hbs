<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blader</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <style>
      nav{max-height: 80px; } .navbar-nav .nav-link { transition: all 0.3s ease;
      padding: 8px 15px; } .navbar-nav .nav-link:hover { box-shadow: 0 4px 8px
      rgba(0, 0, 0, 0.3); color: #00E1FF; }
    </style>
  </head>
  <body class="bg-dark text-light">

    <!-- Navbar (Header) -->
    <nav
      class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-info"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img
            src="/images/logo_1.png"
            alt="Logo"
            class="img-fluid"
            style="max-width: 80px;"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/"
                style="font-size: 1rem; padding: 8px 15px;"
              >
                Inicio
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/games"
                style="font-size: 1rem; padding: 8px 15px;"
              >
                Juegos
              </a>
            </li>

            <!-- Si el usuario está logueado, muestra su nombre y el enlace de cerrar sesión -->
            {{#if user}}
              <li class="nav-item">
                <span
                  class="nav-link"
                  style="font-size: 1rem; padding: 8px 15px;"
                >Bienvenido, {{user.nombre}}!</span>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/users/logout"
                  style="font-size: 1rem; padding: 8px 15px;"
                >
                  Cerrar sesión
                </a>
              </li>
              <!-- Si no está logueado, muestra los enlaces para iniciar sesión o registrarse -->
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/users/login"
                  style="font-size: 1rem; padding: 8px 15px;"
                >
                  Iniciar sesión
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/users/register"
                  style="font-size: 1rem; padding: 8px 15px;"
                >
                  Registrarse
                </a>
              </li>
            {{/if}}

          </ul>
        </div>
      </div>
    </nav>

    <!-- Contenido de la página -->
    <div class="container mt-5">
      {{! <h1 class="text-center text-info"></h1> }}
      {{{body}}}
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 bg-dark">
      <p>&copy; 2024 Blader. Todos los derechos reservados.</p>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>